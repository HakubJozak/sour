#! /usr/bin/env ruby

require 'rubygems'
require 'thor'
require 'json'

begin
  require 'sour/dsl'
  require 'sour/cli'
rescue LoadError
  lib = File.expand_path(File.dirname(__FILE__) + '/../lib')

  if $:.include?(lib)
    raise
  else
    $:.unshift(lib)
    retry
  end
end



args_with_task = [ :docs, ARGV ].flatten
Sour::CLI.start(args_with_task)
